{
    "extends": [
        "airbnb",
        "prettier",
        "prettier/react"
    ],
    "parser": "babel-eslint",
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "es5",
                "singleQuote": true,
                "printWidth": 100
            }
        ],
        "react/prefer-stateless-function": [{
            "ignorePureComponents": true
        }],
        "no-use-before-define": "warn",
        "global-require": "warn",
        "prefer-destructuring": "warn"
    },
    "plugins": [
        "prettier"
    ]
}